@model IEnumerable<CRMWebApp.Models.MdlProspecto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<body>
    <h2>Estado de los Prospectos</h2>


    <form id="frmUsuarios" style="position: absolute;
    width: 100%;
    left: 0; margin-top:60px">

        <table>
            <h4>Selecione un Estatus y agregue las observaciones de cambio</h4>
            <thead class="thead-dark" style="background:azure">
                <tr>
                    <th>Estatus</th>
                    <th>Observaciones de Estatus</th>
                </tr>
            </thead>

            <td>
                <select id="estado">
                    <option value="Autorizado">Autorizado</option>
                    <option value="Rechazado">Rechazado</option>
                </select>
            </td>
            <td>
                <textarea id="comentarios" rows="1" cols="22" required></textarea>
            </td>
        </table>

        <br />
        <table class="table table-bordered">

            <thead class="thead-dark" style="background:azure">
                <tr>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Calle</th>
                    <th>Numero</th>
                    <th>Colonia</th>
                    <th>Codigo Postal</th>
                    <th>Telefono</th>
                    <th>RFC</th>
                    <th>Estatus</th>
                    <th>Archivos</th>
                    <th>Observaciones</th>
                </tr>
            </thead>

            <tbody id="vistaget">

                @foreach (var item in Model)
                {

                    <tr>
                        <td class="usuario">
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellido_Paterno)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellido_Materno)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Calle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Numero)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Colonia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codigo_Postal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td class="rfc">
                            @Html.DisplayFor(modelItem => item.Rfc)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Estatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreArchivo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comentarios)
                        </td>

                        <td>
                            <div class="row" style="margin-left:10px">

                                <div class="col-3">
                                    <button type="button" class="btn btn-link btnEditar">
                                        Editar
                                    </button>
                                </div>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>

        </table>

        <!-- Modal -->
        <div class="modal fade" id="modal" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">¡Aviso!</h4>
                    </div>
                    <div class="modal-body">
                        <h5 id="mensaje">...</h5>
                    </div>
                    <div class="modal-footer">

                        <button type="button" class="btn btn-primary" style="width:60px" id="editar">Si</button>
                        <button type="button" class="btn btn-primary" style="width:60px" id="btnHideModal" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>

    </form>

</body>

@section scripts{
    <script src="~/Scripts/Views/ConsultaEstadoProspecto.js"></script>
}